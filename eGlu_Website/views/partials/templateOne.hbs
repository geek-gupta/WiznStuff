<style type="text/css">
  @import url('https://fonts.googleapis.com/css?family=Work+Sans:100,200');
  * {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family: 'Work Sans', sans-serif;
    font-smoothing: antialiased;

    /* border: 1px solid lightgray; */
  }

  body,
  html {
    height: 100%;
    width: 100%;
    -webkit-animation: fadein 1.5s;
    -moz-animation: fadein 1.5s;
    font-family: 'Work Sans', sans-serif;
    background-color: #fff;
  }



  .wrapper {
    height: auto;
    width: 100%;
  }

  .header-text {
    font-weight: 300;
    font-size: 5em;
  }

  .para-text {
    font-weight: 300;
    font-size: 2em;
  }




  .btn {
    width: 130px;
    margin: 10px !important;
    margin-top: 20px !important;
    background-color: DodgerBlue;
    border-radius: 30px !important;
    border: 0px !important;
    color: #ffffff !important;
    padding: 12px 16px;
    font-size: 16px !important;
    cursor: pointer;
  }

  .btn span {
    font-weight: 600;
    font-size: 1.2em;
    color: white;
  }

  .btn:hover {
    background-color: #394F42;
  }

  .service-btns a {
    text-decoration: none;
    text-align: center;
  }



  /* --------------------------- */

  /*  eGlu Intro*/

  .main-div {
    height: 700px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .main-div-image {
    width: 50%;
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
  }

  .main-div-text {
    width: 50%;
    padding: 0 30px 0 30px;
    height: 100%;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
  }

  .service-btns {
    display: flex;
    justify-content: center;
    align-items: center;
    height: auto;
    width: 100%;
  }

  .service-btns .btn {
    width: 200px;
    min-width: auto;
  }

  .main-div-text .header-text {
    margin-bottom: 50px;
  }

  /* --------------------------- */

  /* ------------------------------------- */

  @media screen and (max-width: 1100px) {
    .header-text {
      font-weight: 300;
      font-size: 4em;
    }
    .para-text {
      font-weight: 300;
      font-size: 1.5em;
    }

  }

  @media screen and (max-width: 800px) {
    .main-div {
      flex-flow: column;
      height: 100vh;
      min-height: 400px;
    }
    .main-div-text,
    .main-div-image {
      width: 100%;
      align-items: center;
    }
    .main-div-image {
      align-items: left;
    }
    .header-text {
      font-weight: 300;
      font-size: 3em;
    }
    .service-btns {
      margin-bottom: 20px;
    }

  }

  @media screen and (max-height: 820px) {
    .main-div {
      justify-content: space-around;
    }
    .main-div-text .header-text {
      margin-bottom: 10px;
    }
    .main-div-text .para-text {
      margin-top: 10px;
      text-align: center;
    }
  }

  @media screen and (max-height: 650px) {
    .main-div {
      justify-content: space-around;
    }
    .main-div-text .header-text {
      margin: 0;
    }
    .main-div-text .para-text {
      margin-top: 10px;
      text-align: center;
    }
  }

  @media screen and (max-height: 750px) {
    .main-div-image {
      height: 40%;
      margin-top: 50px;
    }
    .main-div-text {
      height: 60%;
    }
  }

  @media screen and (max-width: 440px) and (max-height: 500px) {
    .main-div-text .header-text {
      font-size: 2em;
    }
    .main-div-text .para-text {
      font-size: 1.4em;
    }
    .service-btns .btn span {
      font-size: 1em;
      width: 100px;
    }
  }

  @media screen and (max-width: 320px) and (max-height: 568px) {
    .main-div-text .header-text {
      font-size: 2em;
    }
    .main-div-text .para-text {
      font-size: 1.4em;
    }
    .service-btns .btn span {
      font-size: 1em;
      width: 100px;
    }

  }

  @media screen and (max-width: 400px) and (max-height: 590px) {
    .main-div-text .header-text {
      font-size: 2em;
    }
    .main-div-text .para-text {
      font-size: 1.4em;
    }
    .service-btns .btn span {
      font-size: 1em;
      width: 100px;
    }
  }

  /* -------------------------------------- */
</style>

<!-- eGlu Introduction Section Begins, Section two  -->
<div class="wrapper">
  <div class="main-div">
    <div style="background-image: url({{imageUrl}})" class="main-div-image"></div>
    <div class="main-div-text">
      <h1 class="header-text">{{headerText}}</h1>
      <p class="para-text">{{paragraphText}}</p>
      <div class="service-btns">
        <a href="#" class="btn"></i><span>{{buttonOneText}}</span></a>
        <a href="#" class="btn"></i><span>{{buttonTwoText}}</span></a>
      </div>
    </div>
  </div>
</div>
