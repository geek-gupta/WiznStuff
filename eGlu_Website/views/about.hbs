  <script>
    var marker;
    var myLatLng = {
      lat: 12.9722658,
      lng: 77.7505632
    };
    var map;

    function myMap() {
      var mapOptions = {
        center: new google.maps.LatLng(12.9722658, 77.7505632),
        zoom: 13,
      }
      map = new google.maps.Map(document.getElementById("map-map"), mapOptions);
      createMarker();
    }

    function toggleBounce() {
      if (marker.getAnimation() !== null) {
        marker.setAnimation(null);
      } else {
        marker.setAnimation(google.maps.Animation.BOUNCE);
      }
    }

    function createMarker() {
      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        animation: google.maps.Animation.DROP,
        title: "WiZN Systems",
        label: {
          text: "A",
          color: "white"
        }
      });
      google.maps.event.addListener(marker, "mouseover", function(evt) {
        var label = this.getLabel();
        label.color = "black";
        this.setLabel(label);
      });
      google.maps.event.addListener(marker, "mouseout", function(evt) {
        var label = this.getLabel();
        label.color = "white";
        this.setLabel(label);
      });

      var contentString = '<div id="map-info-content"> <h3>WiZN Systems</h3><h5>No 102, 48, Regent Prime, Whitefield Main Road, Sathya Sai Layout Bengaluru, Karnataka 560066 IN, Whitefield Rd </h5></div>';

      var infowindow = new google.maps.InfoWindow({
        content: contentString
      });

      marker.addListener('click', function() {
        infowindow.open(map, marker);
        map.panTo(this.getPosition());
        map.setZoom(16);
      });

      return marker;
    }
  </script>

